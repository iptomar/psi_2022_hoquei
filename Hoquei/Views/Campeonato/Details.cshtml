@model Hoquei.Models.Campeonato

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Designacao)</h1>
<h4>Jogos</h4>
<div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Equipa da casa
                    </th>
                    <th>
                        Golos
                    </th>
                    <th>
                        Equipa de fora

                    <th>
                        Local
                    </th>
                    <th>
                        Data
                    </th>
                </tr>
            </thead>
            <tbody>
                
                    @foreach (var item in Model.ListaDeJogos)
                    {
                <tr>
                    <td>
                        <img src="~/clubefotos/@item.Clube_Casa.Foto" width="30" height="40">
                        @Html.DisplayFor(modelItem => item.Clube_Casa.Name)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GolosCasa)  -  @Html.DisplayFor(modelItem => item.GolosFora)
                    </td>
                    <td>
                        <img src="~/clubefotos/@item.Clube_Fora.Foto" width="30" height="40">
                        @Html.DisplayFor(modelItem => item.Clube_Fora.Name)

                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Local);
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data);
                    </td>
                </tr>
                    
                    }
                
                </tbody>
            </table>
    
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
