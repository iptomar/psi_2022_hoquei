@model IEnumerable<Hoquei.Models.Campeonato>


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create">Create New</a>}
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Designacao)
            </th>
            <th>

                @Html.DisplayNameFor(model => model.escalao.designacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" >@Html.DisplayFor(modelItem => item.Designacao)</a>
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.escalao.designacao)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                   
                    }
                </td>
            </tr>
        }
    </tbody>
    @if (User.IsInRole("Admin")) { 
        <a asp-action="Create" asp-controller="Escalaos">Adicionar Escalão</a>}
</table>
