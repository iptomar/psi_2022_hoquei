@model Hoquei.Models.Jogo

@{ ViewData["Title"] = "Details"; }

<h1>Detalhes do Jogo</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Data
            </th>
            <th>
                Local
            </th>
            <th>
                Escalão
            </th>
            <th>
                Marcadores
            </th>
            <th>
                Capitão
            </th>
            <th>
                Casa     @*Funcionando*@
            </th>
            <th>
                Foto
            </th>
            <th>
                @*Golos Casa*@  @*Funcionando*@
            </th>
            <th>
                Resultado
            </th>
            <th>
                @*Golos Visitante*@  @*Funcionando*@
            </th>
            <th>
                Foto
            </th>
            <th>
                Visitante         @*Funcionando*@
            </th>
            <th>
                Capitão
            </th>
            <th>
                Marcadores
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Data, "{0:dd/MM/yyyy}")
            </td>
            <td>
                @Html.DisplayFor(model => model.Local)
            </td>
            @*<td>
            @Html.DisplayFor(model => model.Escalao)
        </td>*@
            <td>
                @foreach (var item in Model.ListaDeMarcadoresCasa)
                {
                    <a asp-controller="Jogador" asp-action="Details" asp-route-id="@item.Num_Fed" style="margin-right: 5em;">@item.Name</a>}
            </td>
            <td>
                <a asp-controller="Jogador" asp-action="Details" asp-route-id="@Model.Capitao_Casa.Num_Fed" style="margin-right:5px;">@Model.Capitao_Casa.Name </a>
            </td>
            <td>
                <a asp-controller="Clube" asp-action="Details" asp-route-id="@Model.Clube_Fora.Id" style="margin-right:5px;">@Model.Clube_Fora.Name</a>
            </td>
            <td>
                @*<img src="~/clubefotos/@item.Clube_Casa.Foto" style="height:75px; width:65px" />*@
            </td>
            <td style="text-align: right">
                @Html.DisplayFor(model => model.GolosCasa)  @*Funcionando*@
            </td>
            <td style="text-align: center">
                <b style="text-align: center"> - </b>
            </td>
            <td style="text-align: left">
                @Html.DisplayFor(model => model.GolosFora)  @*Funcionando*@
            </td>
            <td>
                @*<img src="~/clubefotos/@item.Clube_Fora.Foto" style="height:75px; width:65px" />*@
            </td>
            <td>
                <a asp-controller="Jogo" asp-action="Details" asp-route-id="@Model.Clube_Casa.Id" style="margin-right:5px;">@Model.Clube_Casa.Name</a> @*Funcionando*@
            </td>
            <td>
                <a asp-controller="Jogador" asp-action="Details" asp-route-id="@Model.Capitao_Fora.Num_Fed" style="margin-right:5px;">@Model.Capitao_Fora.Name </a>
            </td>
            <td>
                @foreach (var item in Model.ListaDeMarcadoresFora)
                {
                    <a asp-controller="Jogador" asp-action="Details" asp-route-id="@item.Num_Fed" style="margin-right: 5em;">@item.Name</a>}
            </td>
        </tr>
    </tbody>
</table>

    <div>
        <a asp-action="Edit" asp-route-id="@Model.JogoId">Editar</a>
    </div>

    <div>
        <a class="nav-link text-dark" asp-action="Index">Voltar</a>
    </div>



