@model IEnumerable<Hoquei.Models.Jogo>

@{ ViewData["Title"] = "Index"; }
<head>
    <link rel="stylesheet" href="~/css/ImagensFilmes.css" />
</head>


<h1>Lista de Jogos</h1>
<p>
    @if(User.IsInRole("Admin")|| User.IsInRole("Utilizador")) { 
    <a asp-action="Adicionar">Adicionar Jogo</a>}
</p>
<table class="table">
    <thead>
        <tr>
            <!--<th>
    Id do Jogo-->
            @*Funcionando*@
            <!--</th>-->
            <th>
                @Html.DisplayNameFor(model => model.Local)
            </th>
            <th>
                Clube da Casa     @*Funcionando*@
            </th>
            <th>
                Foto Casa
            </th>
            <th>
                @*Golos Casa*@  @*Funcionando*@
            </th>
            <th>
                Resultado
            </th>
            <th>
                @*Golos Visitante*@  @*Funcionando*@
            </th>
            <th>
                Foto Visitante
            </th>
            <th>
                Clube Visitante         @*Funcionando*@
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <!--<td>
        <a asp-controller="Jogo" asp-action="Details" asp-route-id="@item.JogoId" style="margin-right:5px;">@item.JogoId</a>-->
            @*@Html.DisplayFor(modelItem => item.JogoId)*@  @*Funcionando*@
            <!--</td>-->
            <td>
                @Html.DisplayFor(modelItem => item.Local)
            </td>
            <td>
                <a asp-controller="Jogo" asp-action="Details" asp-route-id="@item.Clube_Casa.Id" style="margin-right:5px;">@item.Clube_Casa.Name</a> @*Funcionando*@
            </td>
            <td>
                <img src="~/fotos/@item.Clube_Casa.Foto.Nome" width="30" height="40">
            </td>
            <td style="text-align: right">
                @Html.DisplayFor(modelItem => item.GolosCasa)  @*Funcionando*@
            </td>
            <td style="text-align: center">
                <b style="text-align: center"> - </b>
            </td>
            <td style="text-align: left">
                @Html.DisplayFor(modelItem => item.GolosFora)  @*Funcionando*@
            </td>
            <td>
                <img src="~/fotos/@item.Clube_Fora.Foto.Nome" width="30" height="40">
            </td>
            <td>
                <a asp-controller="Jogo" asp-action="Details" asp-route-id="@item.Clube_Fora.Id" style="margin-right:5px;">@item.Clube_Fora.Name</a> @*Funcionando*@
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JogoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.JogoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.JogoId" onclick="return confirm('Tem a certeza que quer apagar esta conta?')">Apagar</a>
            </td>
        </tr>
        }
        </tbody>
</table>




