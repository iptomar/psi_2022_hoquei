@model Hoquei.Models.Clube

@{ ViewData["Title"] = "Details"; }

<h1>@Model.Nome</h1>
<br />

<div class="Clube">
    <div style="float:left; margin-right:20px;  margin-top:10px; border:4px solid black">
        <img src="~/clubefotos/@Html.DisplayFor(model => model.FotografiasID)"
             width="250" height="175" />
    </div>

    <div style="line-height:2;  ">
        <b> Data de Fundação:</b>
        @Html.DisplayFor(model => model.Data_Fundacao)<br />

        <b>Jogadores: </b>

        @foreach (var item in Model.ListaDeJogadores)
        {
<a asp-controller="Clube" asp-action="Details" asp-route-id="@item.Num_Fed" style="margin-right:5px;">@item.Name</a>}

    </div>
</div>
<br />
<br />
<br />
<br />
<br />
<br />

<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>

<a class="btn btn-danger"  asp-action="Delete" asp-route-id="@Model.Id">Apagar</a>

<br />
<a class="btn btn-primary" asp-action="Index">Voltar</a>




