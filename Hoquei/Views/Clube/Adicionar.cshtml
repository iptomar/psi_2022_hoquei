@model Hoquei.Models.Clube

@{
    ViewData["Title"] = "Adicionar";
}

<h1>Adicionar</h1>

<h4>Clube</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Adicionar" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_Fundacao" class="control-label"> Data de Fundação</label>
                <input required type="datetime-local" name="bornDate" asp-for="Data_Fundacao" class="form-control" min="1920-06-07T00:00" max="2011-06-14T00:00"/>
                <span asp-validation-for="Data_Fundacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input type="file" name="imgFile" class="form-control" asp-for="Foto"/>
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
