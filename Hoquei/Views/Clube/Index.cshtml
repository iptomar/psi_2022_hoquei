@model IEnumerable<Hoquei.Models.Clube>

@{ ViewData["Title"] = "Index"; }
<head>
    <link rel="stylesheet" href="~/css/ImagensFilmes.css" />
</head>
<h1>Lista de Clubes</h1>
<p><a asp-action="Adicionar">Adicionar clube</a></p>
@foreach (var item in Model) {

<div class="Clube">
    <a asp-action="Details" asp-route-id="@item.Id">
        <div class="overlay">
            <div class="text">
                @Html.DisplayFor(modelItem => item.Name)
            </div>
        </div>
    </a>
</div>}


