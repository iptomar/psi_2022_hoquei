@model IEnumerable<Hoquei.Models.Clube>

@{ ViewData["Title"] = "Index"; }
<head>
    <link rel="stylesheet" href="~/css/ImagensFilmes.css" />
</head>
<h1>Lista de Clubes</h1>
<br />
<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar Clube</a>
</p>
@foreach (var item in Model) {

<div class="Clube">
    <a asp-action="Details" asp-route-id="@item.Id">
        <img src="~/clubefotos/@Html.DisplayFor(modelItem => item.FotografiasID)"  width="300" height="175"/>
       
            <h1>@Html.DisplayFor(modelItem => item.Nome)</h1>
       
    </a>
</div>}


