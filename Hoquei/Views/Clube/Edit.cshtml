@model Hoquei.Models.Clube

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Clube</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_Fundacao" class="control-label"> Data de Nascimento</label>
                <input required type="datetime-local" name="bornDate" value="2010-01-01T00:01" min="1920-06-07T00:00" max="2011-06-14T00:00" />
                <span asp-validation-for="Data_Fundacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotografiasID" class="control-label"></label>
                <input type="file" name="imgFile" class="form-control" />
                <span asp-validation-for="FotografiasID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="nav-link text-dark" asp-action="Index">Back to List</a>
</div>