@model Hoquei.Models.Clube

@{
    ViewData["Title"] = "Edit";
    string selecionado = "";
}

<h1>Editar Clube</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_Fundacao" class="control-label"> Data de Fundação</label>
                <input required type="datetime-local" name="bornDate" asp-for="Data_Fundacao" class="form-control" />
                <span asp-validation-for="Data_Fundacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label">Fotografia</label>
                <input type="file" name="imgFile" class="form-control" asp-for="Foto"/>
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Jogadores</label>
                @foreach (Jogador item in ViewBag.ListaDeJogadores)
                {
                    if (Model.ListaDeJogadores.Contains(item)) { selecionado = "checked"; }

                    <br /> <input type="checkbox" value="@item.Num_Fed" name="jogadorEscolhido" @selecionado /> @item.Name
                    selecionado = "";

                }
            </div>



            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>