@model Hoquei.Models.Jogador

@{ ViewData["Title"] = "Edit";
                string selecionado = ""; }

<h1>Edit</h1>

<h4>Jogador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero_FederadoReal" class="control-label">Número de Federado</label>
                <input required type="number" asp-for="Numero_FederadoReal" min="1" placeholder="1" />
                <span asp-validation-for="Numero_FederadoReal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Num_Cam" class="control-label">Número da Camisola</label>
                <input required type="number" asp-for="Num_Cam" min="1" max="99" maxlength="2" placeholder="1" />
                <span asp-validation-for="Num_Cam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_Nasc" class="control-label"> Data de Nascimento</label>
                <input required type="datetime-local" name="bornDate" value="2010-01-01T00:01" min="1920-06-07T00:00" max="2011-06-14T00:00" />
                <span asp-validation-for="Data_Nasc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alcunha" class="control-label"></label>
                <input asp-for="Alcunha" class="form-control" />
                <span asp-validation-for="Alcunha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input type="file" name="imgFile" class="form-control" accept=".jpg,.jpeg,.png" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>

            @* listar as categorias, e confrontar essa lista com as categorias a que a lição está associada *@
            @foreach (Clube item in ViewBag.ListaDeClubes)
            {
                if (Model.ListaDeClubes.Contains(item)) { selecionado = "checked"; }

                <br /> <input type="checkbox" value="@item.Id" name="ClubeEscolhido" @selecionado /> @item.Name
                selecionado = "";

            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a class="nav-link text-dark" asp-action="Index">Back to List</a>
</div>