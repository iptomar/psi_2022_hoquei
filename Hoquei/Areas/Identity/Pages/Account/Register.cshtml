@page
@model RegisterModel
@{
   ViewData["Title"] = "Registar";
}

<h1>@ViewData["Title"]</h1>


<form asp-route-returnUrl="@Model.ReturnUrl" method="post">



   <div >
      @*<form asp-route-returnUrl="@Model.ReturnUrl" method="post">*@
       <div class="col-md-4">

           <h4>Criar uma nova conta.</h4>
           <hr />
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>

           <div class="form-group">
               <label asp-for="Input.Email"></label>
               <input asp-for="Input.Email" class="form-control" />
               <span asp-validation-for="Input.Email" class="text-danger"></span>
           </div>
           <div class="form-group">
               <label asp-for="Input.Password"></label>
               <input asp-for="Input.Password" class="form-control" />
               <span asp-validation-for="Input.Password" class="text-danger"></span>
           </div>
           <div class="form-group">
               <label asp-for="Input.ConfirmPassword"></label>
               <input asp-for="Input.ConfirmPassword" class="form-control" />
               <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
           </div>
           <div class="form-group">
               <label asp-for="Input.Utilizador.CC"></label>
               <input asp-for="Input.Utilizador.CC" class="form-control" />
               <span asp-validation-for="Input.Utilizador.CC" class="text-danger"></span>
           </div>
           <div class="form-group">
               <label asp-for="Input.Utilizador.Nome"></label>
               <input asp-for="Input.Utilizador.Nome" class="form-control" />
               <span asp-validation-for="Input.Utilizador.Nome" class="text-danger"></span>
           </div>
           <div class="form-group">
               <label asp-for="Input.Utilizador.UserName"></label>
               <input asp-for="Input.Utilizador.UserName" class="form-control" />
               <span asp-validation-for="Input.Utilizador.UserName" class="text-danger"></span>
           </div>
           <div class="form-group">
               <label asp-for="Input.Utilizador.NumTele"></label>
               <input asp-for="Input.Utilizador.NumTele" class="form-control" />
               <span asp-validation-for="Input.Utilizador.NumTele" class="text-danger"></span>
           </div>
           <div class="form-group">
               <label asp-for="Input.Utilizador.DataNascimento"></label>
               <input asp-for="Input.Utilizador.DataNascimento" class="form-control" />
               <span asp-validation-for="Input.Utilizador.DataNascimento" class="text-danger"></span>
           </div>
           <button type="submit" class="btn btn-primary">Registar</button>

       </div>
 
   </div>
</form>


@section Scripts {
   <partial name="_ValidationScriptsPartial" />
}
